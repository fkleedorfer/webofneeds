<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <artifactId>won-parent-pom</artifactId>
    <relativePath>../won-parent-pom</relativePath>
    <groupId>at.researchstudio.sat</groupId>
    <version>0.10-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>won-integrationtest</artifactId>
  <version>0.10-SNAPSHOT</version>
  <name>Integration Tests</name>
  <packaging>jar</packaging>

  <build>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>copy-image-folders</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <overwrite>true</overwrite>
              <outputDirectory>${project.basedir}/target/test-classes/image</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.parent.parent.basedir}/won-docker/image</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-bot</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-utils-content</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-utils-dns</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-node</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- TEST STUFF -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.testcontainers</groupId>
      <artifactId>testcontainers</artifactId>
    </dependency>
    <!-- http client -->
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>fluent-hc</artifactId>
    </dependency>

    <!-- crypto -->
    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcpkix-jdk15on</artifactId>
    </dependency>
    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcpkix-jdk15on</artifactId>
    </dependency>
    <!-- simulate a /etc/hosts entry for '127.0.0.1  wonnode' -->
    <dependency>
      <groupId>com.alibaba</groupId>
      <artifactId>dns-cache-manipulator</artifactId>
    </dependency>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-bot</artifactId>
      <version>0.10-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>at.researchstudio.sat</groupId>
      <artifactId>won-auth</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
