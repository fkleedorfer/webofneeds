    a            auth:Authorization ;
    auth:grant   [ auth:operation [ auth:requestToken [ auth:tokenScope   auth:OwnerToken ;
                                                        auth:nodeSigned   true ;
                                                        auth:expiresAfter 3600 ] ] ] ;
